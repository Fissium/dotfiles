[colors.normal]
black = "0x282a36"
blue = "0x57c7ff"
cyan = "0x9aedfe"
green = "0x5af78e"
magenta = "0xff6ac1"
red = "0xff5c57"
white = "0xf1f1f0"
yellow = "0xf3f99d"

[colors.primary]
background = "0x282a36"
foreground = "0xeff0eb"

[cursor.style]
shape = "Beam"

[cursor.vi_mode_style]
shape = "Block"

[env]
TERM = "xterm-256color"

[font]
size = 14.0

[font.bold]
family = "FiraCode Nerd Font"
style = "Regular"

[font.italic]
family = "FiraCode Nerd Font"
style = "Italic"

[font.normal]
family = "FiraCode Nerd Font"
style = "Regular"

[[keyboard.bindings]]
action = "ToggleFullscreen"
key = "F11"

[[keyboard.bindings]]
action = "ScrollPageUp"
key = "K"
mods = "Control|Shift"

[[keyboard.bindings]]
action = "ScrollPageDown"
key = "J"
mods = "Control|Shift"

[scrolling]
history = 10000

[shell]
args = ["-l", "-c", "tmux new -A -s main"]
{{- if eq .chezmoi.os "linux" }}
program = "/usr/bin/fish"
{{- end }}
{{- if eq .chezmoi.os "darwin" }}
program = "/opt/homebrew/bin/fish"
{{- end }}

[window]
opacity = 1.0
{{- if eq .chezmoi.os "darwin" }}
startup_mode = "Fullscreen"
{{- end }}

[window.dimensions]
{{- if eq .chezmoi.os "linux" }}
columns = 165
lines = 51
{{- end }}

[window.padding]
x = 0
y = 0
